import os.path

Import("env","libRHVoice_core","libRHVoice_audio")
local_env=env.Clone()
for lib in [libRHVoice_core,libRHVoice_audio]:
	local_env.Prepend(LIBS=lib)
src=["main.cpp",
	 "base.cpp",
	 "state.cpp",
	 "io.cpp",
	 "command.cpp",
	 "module.cpp",
	 "init.cpp",
	 "config_command.cpp",
	 "config_audio.cpp",
	 "config_tts.cpp",
	 "config_logger.cpp",
	 "list_voices.cpp",
	 "speak.cpp",
	 "stop.cpp",
	 "pause.cpp",
	 "quit.cpp",
	 "speech_synthesizer.cpp",
	 "speech_player.cpp"]
module=local_env.Program("sd_rhvoice",src)
if local_env["PLATFORM"]!="win32":
	local_env.InstallProgram(module)
